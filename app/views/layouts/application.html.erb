<!DOCTYPE html>
<html>
  <head>
    <title>Food Management</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <style>
  .center {
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 100%;
  }
  </style>

  <body>

  <!-- Navbar -->
    <header>
      <div class="nav">
        <div class="navbar-right" style="max-height: 296px, letter-spacing:4px; ">
          <a href="<%= root_url %>" class="button" />Home</a>
          <a href="<%= about_url %>" class="button" />About</a>
          <%= link_to("All Foods", foods_path, :class => "button") %>
        </div>
      </div>
    </header>

  <%# Flash messages %>
    <div>
      <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
      <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
      <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
    </div>

  <%= yield %>


  </body>

  <style>
  .center {
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 100%;
  }
  </style>

  <footer>
    <div class="container">
        <p>For more info
          <a href="mailto:luciaabreu17@gmail.com">contact us</a>.
        </p>
    </div>
  </footer>

</html>
